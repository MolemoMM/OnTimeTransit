# React Development Environment Optimizations
# Reduce file watching frequency to lower CPU usage
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=2000

# Disable source maps in development to speed up builds
GENERATE_SOURCEMAP=false

# Disable fast refresh to reduce CPU load
FAST_REFRESH=false

# Reduce bundle analyzer overhead
REACT_APP_BUNDLE_ANALYZE=false

# Optimize webpack compilation
WEBPACK_CACHE=true

# Reduce memory usage
NODE_OPTIONS=--max-old-space-size=1024

# Disable unnecessary features in development
REACT_APP_DISABLE_NEW_JSX_TRANSFORM=true
